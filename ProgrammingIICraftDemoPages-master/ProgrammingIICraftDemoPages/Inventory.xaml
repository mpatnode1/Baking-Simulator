<Page x:Class="ProgrammingIICraftDemoPages.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgrammingIICraftDemoPages"
      mc:Ignorable="d" 
      d:DesignHeight="456" d:DesignWidth="190"
      Title="Inventory">

    <Grid>
        <Rectangle  Fill="#FDE2E4"></Rectangle>
        <Rectangle Fill="White" Margin="10,10,10,10"/>
        <ListView ItemsSource="{Binding InventoryList}" Margin="10,10,10,10">
            <TextBlock Text = "{Binding ItemDescription}"/>
        </ListView>
    </Grid>
</Page>
